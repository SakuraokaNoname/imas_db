<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.db.imas.dao.ImasIdolDao">

    <select id="setBirthdayIdol" resultType="ImasIdolDTO" parameterType="java.util.Date">
        SELECT *
        FROM imas_idol i
        <trim prefix="where" prefixOverrides="and | or">
            <if test="birthday != null">
                and DATE_FORMAT(i.`birthday`,'%m-%d') = DATE_FORMAT(#{birthday},'%m-%d')
            </if>
        </trim>
    </select>

</mapper>