<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.db.imas.dao.ImasGroupChatMapper">

    <select id="getGroupChatList" resultType="ImasGroupChat">
        SELECT * FROM imas_group_chat
    </select>

    <select id="getProducerList" resultType="com.db.imas.session.Session">
        SELECT CONCAT(id) AS id,name,icon,chatId FROM manga_user WHERE permission > -1
    </select>

    <insert id="insertChatMessage" parameterType="ImasChatMessage">
        INSERT INTO imas_chat_message (`id`,`type`,`message`,`toChatId`,`createTime`,`sender`)
        VALUES
        (#{id},#{type},#{message},#{toChatId},#{createTime},#{sender})
    </insert>
</mapper>