<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.db.imas.dao.MangaNoticeDao">

    <select id="getMangaNoticeList" resultType="com.db.imas.model.dto.MangaNoticeDTO">
        SELECT title,content,link,createTime
        FROM manga_notice tb1
        ORDER BY tb1.createTime DESC
    </select>

    <insert id="addNotice">
        INSERT INTO manga_notice (`type`,title,content,link) VALUES
        (#{type},#{title},#{content},#{link})
    </insert>

</mapper>