<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.db.imas.dao.MangaUserDao">

    <select id="userLogin" parameterType="MangaLoginVO" resultType="MangaUserDTO">
        SELECT id,name,icon
        FROM manga_user
        WHERE loginId = #{loginId} AND password = #{password}
    </select>

    <insert id="userRegister" parameterType="MangaAddUserVO">
        INSERT INTO manga_user (name,loginId,password,icon,permission,createTime)
        VALUES (#{name},#{loginId},#{password},#{icon},#{permission},#{createTime})
    </insert>

    <update id="userUpdate" parameterType="MangaUpdateUserVO">
        UPDATE manga_user
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="permission != null">
                permission = #{permission},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="checkUserByOne" parameterType="String" resultType="Integer">
        SELECT count(1)
        FROM manga_user
        WHERE loginId = #{loginId}
    </select>

    <select id="userIconList" resultType="MangaUserIconDTO">
        SELECT *
        FROM manga_user_icon
    </select>
</mapper>