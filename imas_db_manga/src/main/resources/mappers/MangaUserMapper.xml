<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.db.imas.dao.MangaUserDao">

    <select id="userLogin" parameterType="MangaLoginVO" resultType="MangaUserDTO">
        SELECT id,name,icon,chatId,permission
        FROM manga_user
        WHERE loginId = #{loginId} AND password = #{password}
    </select>

    <insert id="userRegister" parameterType="MangaAddUserVO">
        INSERT INTO manga_user (name,loginId,password,salt,icon,permission,createTime,chatId)
        VALUES (#{name},#{loginId},#{password},#{salt},#{icon},#{permission},#{createTime},#{chatId})
    </insert>

    <update id="userUpdate" parameterType="MangaUpdateUserVO">
        UPDATE manga_user
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="permission != null">
                permission = #{permission},
            </if>
            <if test="loginIP != null">
                loginIP = #{loginIP},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="checkUserNameByOne" resultType="Integer">
        SELECT count(1) FROM manga_user WHERE `name` LIKE CONCAT(#{userName})
    </select>

    <select id="checkUserByOne" parameterType="String" resultType="Integer">
        SELECT count(1)
        FROM manga_user
        WHERE loginId = #{loginId}
    </select>

    <select id="userIconList" resultType="MangaUserIconDTO">
        SELECT *
        FROM manga_user_icon
    </select>

    <select id="selectUserList" resultType="MangaQueryUserDTO">
        SELECT id,name,loginId,permission,createTime,loginIP
        FROM manga_user
        ORDER BY permission DESC,createTime DESC
    </select>

    <select id="getUser" resultType="MangaUser">
        SELECT * FROM manga_user WHERE loginId = #{loginId}
    </select>

    <update id="updateUserPwd" parameterType="MangaUser">
        UPDATE manga_user
        SET password = #{mangaUser.password}, salt = #{mangaUser.salt}
        WHERE id = #{mangaUser.id}
    </update>
</mapper>